<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>web1</display-name>
  <servlet>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>
		by.gsu.epamlab.controllers.LoginController
	</servlet-class>
    <init-param>
      <param-name>dao</param-name>
      <param-value>db</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegistrateController</servlet-name>
    <servlet-class>
		by.gsu.epamlab.controllers.RegistrateController
	</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrateController</servlet-name>
    <url-pattern>/registrate</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <jsp-config>
    <taglib>
      <taglib-uri>/jstl/core</taglib-uri>
      <taglib-location>/WEB-INF/c.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/jstl/fn</taglib-uri>
      <taglib-location>/WEB-INF/fn.tld</taglib-location>
    </taglib>
  </jsp-config>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>by.gsu.epamlab.filters.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/addTask</url-pattern>
    <url-pattern>/editTask</url-pattern>
    <url-pattern>/task</url-pattern>
    <url-pattern>/editFile</url-pattern>
    <url-pattern>/addTask.jsp</url-pattern>
    <url-pattern>/main.jsp</url-pattern>
    <url-pattern>/menuEditTask.jsp</url-pattern>
    <url-pattern>/menuSection.jsp</url-pattern>
    <url-pattern>/viewTasks.jsp</url-pattern>
    <url-pattern>/editFile.jsp</url-pattern>
  </filter-mapping>
</web-app>